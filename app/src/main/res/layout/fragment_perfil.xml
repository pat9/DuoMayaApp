<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#dcdcdc"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_gradient" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2" />


                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardRegistro"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="130dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtNombreUsu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="55dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Mi Nombre"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/txtPuntos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtNombreUsu"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Mis puntos:"
                            android:textSize="18dp" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="85dp"
                    android:elevation="20dp"
                    android:id="@+id/relativeLayout">

                    <ImageView

                        android:id="@+id/imgperfil"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="50dp"
                        android:elevation="16dp"
                        android:src="@drawable/ic_account_circle" />

                    <ImageView
                        android:id="@+id/btnFoto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:elevation="16dp"
                        android:src="@drawable/ic_add_a_photo" />




                </RelativeLayout>


                <android.support.v7.widget.CardView

                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardRegistro"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="34dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:id="@+id/LayoutInput6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"

                        android:background="#fff"
                        android:padding="15dp">

                        <Button
                            android:id="@+id/btnEditar"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="8dp"
                            android:background="@drawable/btnshape"
                            android:fontFamily="@font/open_sans"
                            android:text="Editar Perfil"
                            android:textColor="#fff"
                            android:textSize="9pt" />

                        <Button
                            android:id="@+id/btnRanking"
                            android:layout_width="200dp"
                            android:layout_below="@id/btnEditar"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/btnshape"
                            android:fontFamily="@font/open_sans"
                            android:text="Ranking"
                            android:textColor="#fff"
                            android:textSize="9pt" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>




</LinearLayout>